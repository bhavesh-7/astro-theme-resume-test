---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/profile-static.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Java', 'Kotlin', 'Python', 'SQL', 'JavaScript']
const frontend = ['React', 'Astro', 'Bootstrap', 'Tailwind CSS']
const backend = ['Spring Boot', 'Spring MVC', 'Hibernate', 'JPA']
const devtools = ['Git', 'MySQL', 'PostgreSQL', 'Redis', 'MongoDB', 'Gradle', 'Neovim']
const others = ['AWS', 'Azure', 'Google Cloud', 'Docker', 'Fedora']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-[180px] w-[180px] rounded-full bg-[#BCBCBC] p-1'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Bhavesh Mishra</h1>
				<a
					href='https://linkedin.com/in/mishraBhavesh'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>Open to work</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='Java Developer'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Mumbai, Maharashtra'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/mishraBhavesh'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
					<Label title='Github' as='a' href='https://github.com/bhavesh-7' target='_blank'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 22 22'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z'
							></path>
						</svg>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				Hi, I'm Bhavesh, a dedicated Java developer with a passion for crafting efficient and
				user-friendly applications. With experience in web development and a strong foundation in
				IT, I specialize in building scalable solutions using Java, Spring Boot, and modern
				development practices. Let's connect and build something amazing together!
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<Card
				heading='System Administrator / DevOps Engineer'
				subheading='Tata Consultancy Services - Mumbai, Maharashtra'
				date='Feb 2025 - Present'
				altText='SysAdmin and DevOps Engineer @ Tata Consultancy Services'
				imageClass='h-12 w-auto md:-left-16'
				collapsible={true}
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Provisioned and managed Linux servers (RHEL, Ubuntu) across AWS and on-prem
						environments, ensuring high availability and security compliance.
					</li>
					<li>
						Automated infrastructure configuration and deployment using Ansible, including CI/CD
						pipelines for playbook validation and rollout.
					</li>
					<li>
						Administered AWS services including EC2 provisioning, Security Group configuration, IAM
						role management, and network-level access controls.
					</li>
					<li>
						Managed enterprise virtualization environments using VMware vSphere for VM lifecycle
						operations and resource optimization.
					</li>
					<li>
						Performed server hardening, patch management, and system upgrades to maintain compliance
						and minimize vulnerabilities.
					</li>
					<li>
						Deployed and maintained mail infrastructure including Zimbra installation, Postfix
						configuration, SMTP routing, and SFTP services.
					</li>
					<li>
						Configured and maintained DNS services, LDAP/Active Directory integrations, and secure
						authentication mechanisms.
					</li>
					<li>
						Developed shell scripts and automation workflows to streamline repetitive operational
						tasks and improve deployment efficiency.
					</li>
					<li>
						Supported version control workflows using SVN and implemented environment-level
						automation improvements.
					</li>
					<li>
						Troubleshot production issues across infrastructure, networking, and application layers
						to ensure minimal downtime.
					</li>
				</ul>
			</Card>
			<Card
				heading='Web Development Intern'
				subheading='Prometheus Solutions - Remote'
				date='May 2023 - Jul 2023'
				altText='Web Development Intern @ Prometheus Solutions'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Assisted in .NET web application development using C#, ASP.NET, and SQL Server.</li>
					<li>Contributed to debugging, code reviews, and feature implementation.</li>
					<li>Conducted manual and automated testing to identify and resolve defects.</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Bachelor of Science in Information Technology (Hons)'
				subheading='Somaiya Vidhyavihar University - Mumbai, Maharashtra'
				date='Grade - 8.3 CGPA'
				altText='BS in Information Technology (Hons) @ Somaiya Vidhyavihar University'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Developed a Android application as a part of the final year project using Kotlin,
						Firebase, and Google Maps API.
					</li>
					<li>Developed a full-stack web application using Java, Spring Boot, and React.</li>
					<li>
						Collaborated with a team of 4 to design and implement a RESTful API for the application.
					</li>
					<li>Conducted manual and automated testing to identify and resolve defects.</li>
				</ul>
			</Card>
			<Card
				heading='HSC in Computer Science'
				subheading='Priti Academy College - Mumbai, Maharashtra'
				date='Grade - 73.50%'
				altText='HSC in Computer Science @ Priti Academy College'
				imageClass='h-12 w-auto md:-left-16'
			/>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://notes.bhaveshmishra.dev'
					heading='Sticky Notes - A Note Taking Web Application'
					subheading='UNDER-DEVELOPMENT: A web application that allows users to create, edit, and delete notes. It also supports categorization and search functionality.'
					imagePath='/src/assets/coming-soon.png'
					altText='Sticky Notes - A Note Taking Web Application'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://github.com/bhavesh-7/Tkuzu'
					heading='Tkuzu - A Ride Sharing Android Application'
					subheading='An Android application that allows users to book rides, Share their rides in high traffic to cop-up with ride cost and time, track their rides in real-time, and make payments securely.'
					imagePath='/src/assets/tkuzu.png'
					altText='Tkuzu - A Ride Sharing Android Application'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Certifications'>
			<Card
				as='a'
				heading='Complete Linux Training Course'
				subheading='Skills: Linux · Command Line · Shell Scripting · System Administration'
				date='Apr 2025'
				imagePath='/src/assets/udemy.png'
				altText='Complete Linux Training Course'
				imageClass='h-11 w-auto md:-left-16'
				href='https://ude.my/UC-e4b116b4-8e28-4401-9a3a-2a1e9b26a99c/'
			/>
			<Card
				as='a'
				heading='Oracle Cloud Infrastructure 2024 Generative AI Certified Professional'
				subheading='Skills: OCI · Large Language Models (LLM) · Retrieval-Augmented Generation (RAG) · Generative AI Tools'
				date='Aug 2024 - Aug 2026'
				imagePath='/src/assets/oci.jpg'
				altText='Oracle Cloud Infrastructure 2024 Generative AI Certified Professional'
				imageClass='h-11 w-auto md:-left-16'
				href='https://catalog-education.oracle.com/ords/certview/sharebadge?id=F916FC079E790150C95ED6709B82FD279F3E032F0343A3F0FBDD4B43D77607C4'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Tools' skills={devtools} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
	<a
		href='/files/resume-cv.pdf'
		class='mt-16 flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
	>
		<span class='relative flex items-center justify-center'>
			<span
				class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
			></span>
			<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
		</span>

		<p class='font-medium'>Download Resume</p>
	</a>
</PageLayout>
